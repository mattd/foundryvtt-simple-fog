        "fvtt",
        "module"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mattd/foundryvtt-simple-fog.git"
    },
    "author": "",
    "license": "SEE LICENSE IN LICENSE",
    "devDependencies": {
        "ava": "^5.3.1",
        "husky": "^8.0.3",
        "prettier": "^3.0.0",
        "pretty-quick": "^3.1.3"
    },
    "ava": {
        "verbose": true
    }
}
