{
    "name": "foundryvtt-simplefog",
    "description": "Manually draw fog of war in FoundryVTT.",
    "version": "11.0.0",
    "main": "main.mjs",
    "scripts": {
        "clean": "rm build.zip",
        "package": "cd module && zip -r ../build.zip . -x src\\* && cd ..",
        "prepare": "husky install",
        "release": "npm test && npm run package",
        "test": "ava"
    },
    "keywords": [
        "foundryvtt",
        "fvtt",
        "module"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mattd/foundryvtt-simplefog.git"
    },
    "author": "",
    "license": "SEE LICENSE IN LICENSE",
    "devDependencies": {
        "ava": "^5.3.0",
        "husky": "^8.0.0",
        "prettier": "^2.8.8",
        "pretty-quick": "^3.1.3"
    },
    "ava": {
        "verbose": true
    }
}
